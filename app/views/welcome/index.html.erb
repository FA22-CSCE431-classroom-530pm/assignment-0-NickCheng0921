<div id="head">
    <h1> Book Collection
</div>
<div id="body">

    <table>
        <thead>
        <tr>
            <th>Title</th>
            <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
            <% @books.each do |book| %>
                <tr>
                    <td><%= book.title %></td>
                    <td><%= link_to 'Show', book %></td>
                    <td><%= link_to 'Edit', edit_book_path(book) %></td>
                    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
            <% end %>
        </tbody>
    </table>


    <div id="new book">
        <a href="books/new">New book</a>
    </div>
</div>